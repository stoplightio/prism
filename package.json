{
  "private": true,
  "license": "Apache-2.0",
  "version": "3.0.0",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/stoplightio/prism.git"
  },
  "scripts": {
    "lint": "eslint ./packages/**/src/*.ts",
    "lint.fix": "yarn lint --fix",
    "build": "ttsc --build ./packages/tsconfig.build.json",
    "posttest": "yarn lint",
    "test": "jest",
    "release": "lerna version",
    "prebuild.binary": "yarn build",
    "build.binary": "npx pkg --output ./cli-binaries/prism-cli ./packages/cli/",
    "test.harness": "jest -c ./jest.harness.config.js"
  },
  "devDependencies": {
    "@stoplight/types": "^12.2.0",
    "@types/caseless": "^0.12.2",
    "@types/content-type": "^1.1.3",
    "@types/faker": "^5.5.3",
    "@types/jest": "^26.0.23",
    "@types/json-schema": "^7.0.7",
    "@types/json-schema-faker": "^0.5.1",
    "@types/lodash": "^4.14.168",
    "@types/node": "^13.1.1",
    "@types/node-fetch": "2.5.10",
    "@types/pino": "^6.3.8",
    "@types/postman-collection": "^3.5.5",
    "@types/raw-body": "^2.3.0",
    "@types/signale": "^1.2.1",
    "@types/split2": "^2.1.6",
    "@types/type-is": "^1.6.3",
    "@types/uri-template-lite": "^19.12.0",
    "@types/urijs": "^1.19.15",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^4.22.0",
    "abstract-logging": "^2.0.1",
    "diff-js-xml": "^1.0.5",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "fast-xml-parser": "^3.19.0",
    "gavel": "^10.0.2",
    "glob-fs": "^0.1.7",
    "http-string-parser": "^0.0.6",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lerna": "^3.17.0",
    "lint-staged": "^10.5.4",
    "lodash": "^4.17.21",
    "nock": "^13.0.11",
    "node-fetch": "^2.6.1",
    "prettier": "^2.2.1",
    "split2": "^3.2.2",
    "tmp": "^0.2.0",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "ts-transform-import-path-rewrite": "^0.3.0",
    "tsconfig-paths": "^3.8.0",
    "ttypescript": "^1.5.12",
    "type-is": "^1.6.18",
    "typescript": "^4.2.4"
  },
  "lint-staged": {
    "**/packages/**/*.ts": [
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
