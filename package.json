{
  "private": true,
  "name": "prism",
  "license": "UNLICENSED",
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "yarn",
    "fmt": "prettier --write \"packages/*/src/**/*.{ts,js}\"",
    "lint": "tslint -p packages/tsconfig.json",
    "build": "tsc --build ./packages/tsconfig.build.json",
    "build.watch": "tsc --build --watch ./packages/tsconfig.build.json",
    "test": "yarn lint && yarn test.fast",
    "test.fast": "jest --env=node --maxWorkers=2",
    "test.coverage": "yarn test --coverage",
    "test.watch": "yarn test --watchAll",
    "test.update": "yarn test.fast --updateSnapshot"
  },
  "devDependencies": {
    "@stoplight/types": "4.x.x",
    "@types/chance": "1.0.x",
    "@types/jest": "23.3.x",
    "@types/node": "11.13.0",
    "chance": "1.0.x",
    "jest": "^23.6.x",
    "ts-jest": "23.10.x",
    "tslint": "5.15.0",
    "tslint-config-stoplight": "1.2.x",
    "tslint-eslint-rules": "5.4.x",
    "typescript": "^3.4.1"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {}
}
