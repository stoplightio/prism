{
  "private": true,
  "name": "prism",
  "license": "Apache-2.0",
  "version": "3.0.0-pre",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/stoplightio/prism.git"
  },
  "scripts": {
    "lint": "tslint -p packages/tsconfig.test.json",
    "lint.fix": "yarn lint --fix",
    "build": "tsc --build ./packages/tsconfig.build.json",
    "posttest": "yarn lint",
    "test": "yarn test.ci",
    "test.ci": "jest --maxWorkers=2",
    "test.coverage": "yarn test --coverage",
    "test.watch": "yarn test --watchAll",
    "test.update": "yarn test.fast --updateSnapshot",
    "release": "lerna version prerelease --preid beta",
    "run.binary": "$BINARY mock -p ${PRISM_PORT:-4010} $SPEC",
    "run.binary.v2": "./prism mock -p ${PRISM_PORT:-4010} --spec ./examples/petstore.oas2.json",
    "prebuild.binary": "yarn build",
    "prebuild.binaries": "yarn build",
    "build.binary": "npx pkg --target $HOST --output ./cli-binaries/prism-cli-linux ./packages/cli/",
    "build.binaries": "npx pkg --out-path ./cli-binaries ./packages/cli/",
    "test.binary": "jest -c ./jest.harness.config.js"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.22.0",
    "@oclif/tslint": "^3.1.1",
    "@stoplight/types": "^9.0.2",
    "@types/caseless": "^0.12.2",
    "@types/chai": "^4.1.7",
    "@types/chance": "^1.0.4",
    "@types/jest": "^24.0.15",
    "@types/json-schema": "^7.0.3",
    "@types/lodash": "^4.14.134",
    "@types/nock": "^10.0.3",
    "@types/node": "^12.0.10",
    "@types/node-fetch": "^2.3.7",
    "@types/pino": "^5.8.8",
    "@types/signale": "^1.2.1",
    "@types/split2": "^2.1.6",
    "@types/type-is": "^1.6.2",
    "chance": "^1.0.18",
    "globby": "^9.2.0",
    "husky": "^2.5.0",
    "jest": "^24.8.0",
    "lerna": "^3.15.0",
    "lint-staged": "^8.2.1",
    "nock": "^10.0.6",
    "node-fetch": "^2.6.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.18.0",
    "tslint-config-stoplight": "^1.3.0",
    "typescript": "^3.5.2"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "*packages/**/.ts": [
      "tslint -p packages/tsconfig.test.json --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
